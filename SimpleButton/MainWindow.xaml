<Window x:Class="SimpleButton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleButton"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
        <!-- XAML -> Extensible Application Markup Language -->
    <Grid>
        <!-- Another Way -->
        <!-- <Button Content="Click Me" Height="50" Width="100" FontSize="20"></Button> -->
        <!-- Another Way -->
        <!-- <Button Height="50" Width="100" FontSize="20">Click Me</Button> -->
        <!-- Another Way -->
        <!-- <Button Content="Click Me" Height="50" Width="100" FontSize="20" /> -->
        <Button>
            <Button.FontSize>22</Button.FontSize>
            <Button.Height>50</Button.Height>
            <Button.Width>200</Button.Width>
            <Button.Content>
                <WrapPanel>
                    <TextBlock Foreground="BlueViolet">Multi</TextBlock>
                    <TextBlock Foreground="Red">Color</TextBlock>
                    <TextBlock Foreground="Pink">Button</TextBlock>
                </WrapPanel>
            </Button.Content>
        </Button>
    </Grid>
</Window>
